{
  "name": "@xsin/vite-plugin-lib",
  "type": "module",
  "version": "0.1.0",
  "description": "Vite plugin for build configuration, automatic aliases, and type declarations.",
  "author": {
    "name": "XSIN STUDIO",
    "url": "https://github.com/xsin"
  },
  "license": "MIT",
  "homepage": "https://github.com/xsin/vue-waterfall/tree/main/packages/vite-plugin-lib",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xsin/vue-waterfall.git",
    "directory": "packages/vite-plugin-lib"
  },
  "bugs": {
    "url": "https://github.com/xsin/vue-waterfall/issues"
  },
  "keywords": [
    "vite-plugin",
